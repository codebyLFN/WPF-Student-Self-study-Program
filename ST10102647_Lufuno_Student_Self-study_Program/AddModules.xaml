                </Style>
            </Button.Resources>
        </Button>
        <Button Name="btnclear" Content="CLEAR" HorizontalAlignment="Left" Margin="312,362,0,0" VerticalAlignment="Top" Height="39" Width="127" RenderTransformOrigin="0.514,0.617" Click="btnclear_Click" FontWeight="Bold" FontSize="16">
